---
import { t } from "i18next";
---

<section class="container" id="find-us-section">
  <div data-aos="fade-up">
    <h1 class="text-center">{t("find-us")}</h1>
    <p class="text-center">
      800 7th Ave at 52 nd Street | NY, New York 10019
      <br />
      <br />
      <strong>{t("common.parking")}</strong>
      <br />
      City Parking - 1678 Broadway between 52nd and 53rd
      <br />
      New York, NY 10019 | 212-960-8301
    </p>
  </div>

  <div class="map-container">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d755.4940863109215!2d-73.982482!3d40.762545!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c258559a700f73%3A0xf853ef5e9ccc6fc4!2sRosie%20O'Grady's!5e0!3m2!1sen!2smx!4v1682960473334!5m2!1sen!2smx"
      width="100%"
      height="450"
      allowfullscreen
      loading="lazy"
      title="Rosie O'Grady's Map"
      class="map"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
    <a href="#" class="btn btn-primary directions-button"
      >{t("find-us.download-directions")}</a
    >
  </div>
  <div class="mt-4 text-center">
    <a href="https://wa.me/+16466274329" class="whatsapp">
      <i class="bi bi-whatsapp"></i>
      {t("common.chat-now")}
    </a>
  </div>
</section>

<style lang="scss">
  // Show direction button over map
  .map-container {
    position: relative;
  }

  .directions-button {
    position: absolute;
    left: 50%;
    bottom: 20px;
    transform: translate(-50%, -50%);
    z-index: 1;
    text-transform: uppercase;
  }

  // Whatsapp link
  .whatsapp {
    margin-top: 20px;
    color: #25d366;
    text-decoration: none;
    text-transform: uppercase;
  }
</style>
