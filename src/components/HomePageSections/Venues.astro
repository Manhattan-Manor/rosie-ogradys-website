---

<section class="container" id="venues-section">
  <h1 data-aos="fade-up">{t("venues")}</h1>

  <p data-aos="fade-up">
    <span class="d-block mb-3 fw-bold">{t("rosie-pub-broadway-room")}</span>
    {t("rosie-pub-broadway-room.description")}
  </p>

  <div class="row venues">
    {
      rosieVenues.map((venue) => (
        <div class="col-12 col-md-6 d-flex justify-content-center">
          <Venue {...venue} />
        </div>
      ))
    }
  </div>

  <p data-aos="fade-up">
    <span class="d-block mb-3 fw-bold">Manhattan Manor</span>
    {t("venues.description")}
  </p>

  <div class="row venues">
    {
      mmVenues.map((venue) => (
        <div class="col-12 col-md-6 d-flex justify-content-center">
          <Venue {...venue} />
        </div>
      ))
    }
  </div>

  <a href="#contact-us-section" class="d-block mt-5">{t("private-event")}</a>
</section>

