---
import RestaurantMenu from "../../classes/RestaurantMenu";
import dessertMenu from "../../data/dessertMenu";

const menu = dessertMenu;
---
<head>
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
</head>

<div class="restaurant-menu-group">
  <h2>{menu.name}</h2>

    <div class="container">
        <div class="row justify-content-center">
            {
            menu.categories?.map((category, i) => (
                <div>
                  <div class="row mb-3 justify-content-center">
                      <div class="col-md-3">
                          <h3 class="text-start">{category.name}</h3>
                      </div>
                      <div class="col-md-5">
                          <p class="dish mt-4">{category.description}</p>
                      </div>
                      <div class="col-md-1">
                          {category.price && <p class="dish mt-4 ms-5">${category.price}</p>}
                      </div>
                  </div>
                  {
                      category.subCategory?.map((subCat)=> (
                          <div class="row mb-3 justify-content-center">
                              <div class="col-md-3">
                                  <p class="dish-categories text-start">{subCat.name}</p>
                              </div>
                              <div class="col-md-5">
                                  <p class="dish">{subCat.description}</p>
                              </div>
                              <div class="col-md-1">
                              {subCat.price && <span class="dish ms-5">{"$"+subCat.price}</span>}
                              </div>
                          </div>
                      ))
                  }
                  {
                    (i === menu.categories.length -1) && 
                    (<div class="row mb-3 justify-content-center">
                        <div class="col-md-9">
                            <br />
                            <p class="dish text-start">Expresso – Cappuccino – Herbal Tea</p>
                        </div>
                    </div>)
                  }
                  <br />
                </div>
            ))
            }
        </div>
    </div>
    <br>
</div>

<style lang="scss">
  @import "../../assets/styles/_colors.scss";

  body{
    background-color: black;
  }
  
  .restaurant-menu-group {
    padding: 15px;
    background-color: black;

    .note-title{
        font-size: 12px;
        font-weight: bold;
        color: white;
    }

    .note{
        font-size: 11px;
        color: white;
    }

    .sub-categories{
      font-size: 1.25rem;
      color: white;
      font-weight: bold;
    }

    .btn{
        color: white;
    }

    .dish-categories{
      font-size: 1rem;
      color: $primary;
      font-weight: bold;
    }

    .dish-categories-note{
        font-size: .75rem;
        color: $primary;
        font-weight: 600;
    }

    .dish{
      font-size: 0.9rem;
      color: white;
      font-weight: 100;
    }

    h2 {
      font-size: 2.5rem;
      text-align: center;
    }

    h3 {
      font-size: 1.75rem;
      margin-top: 20px;
    }

    h2,
    h3 {
      color: white;
      font-weight: bold;
    }

    hr {
      margin-left: 0;
      border-color: $primary;
      opacity: 1;

      // If lg screen, max-width is 100%
    //   @media (min-width: 992px) {
    //     max-width: 100%;
    //   }
    }

    ul {
      list-style: none;
      margin: 0;
      padding: 0;

      li {
        margin-top: 15px;

        span {
          display: block;
          color: white;

          &:first-child {
            font-size: 18px;
            font-weight: bold;
          }
        }
      }
    }

    ol {
      list-style: none;
      margin: 0;
      padding: 0;

      li {
        margin-top: 15px;

        span {
          display: block;
          color: white;
          font-size: 10px;

          &:first-child {
            font-size: 16px;
            font-weight: bold;
          }
        }
      }
    }
  }
</style>
