---
import RestaurantMenu from "../../classes/RestaurantMenu";
import cocktailMenu from "../../data/cocktailMenu";

const menu = cocktailMenu;
---
<head>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
        crossorigin="anonymous"
      />
  </head>
  
<div class="restaurant-menu-group">
  <h2>{menu.name}</h2>

    <div class="row justify-content-center">
        <div class="col-md-4">
            {
            menu.categories?.slice(0, 4).map((category) => (
                <div>
                <h3 >{category.name}</h3>
                <hr />
                <ul>
                    {
                        category.dishes?.length && 
                        category.dishes.map((dish) => (
                            <ol>
                                <li>
                                    <p class="dish">{dish.name}</p>
                                </li>
                            </ol>
                        ))
                    }
                    { 
                    !category.dishes &&
                    category.subCategory?.map((subCat) => (
                    <li>
                                <p class="dish-categories text-start d-flex justify-content-between align-items-center">
                                    {subCat.name}
                                    { subCat.price && <span class="dish-categories me-3">{subCat.price}</span>}
                                </p>
                                {
                                    subCat.dishes &&
                                    subCat.dishes?.map((dish) => (
                                        <ol>
                                            <li>
                                                <p class="dish">{dish.name}</p>
                                            </li>
                                        </ol>
                                    ))
                                }
                            {
                                subCat.subCategory?.map((ssub) => (
                                        <ol>
                                            <p class="dish-categories text-start d-flex justify-content-between align-items-center">
                                            {ssub.name}
                                            { subCat.price && <span class="dish-categories me-3">{subCat.price}</span>}
                                        </p>
                                            {
                                                ssub.dishes?.map((dish) => (
                                                    <li>
                                                        <p class="dish">{dish.name}</p>
                                                    </li>
                                                ))
                                            }
                                        </ol>
                                )) 
                            }
                            </li>
                    ))}
                </ul>
                <br />
                </div>
            ))
            }
        </div>
        <div class=" col-md-4">
            {
            menu.categories?.slice(4, menu.categories.length).map((category) => (
                <div class="container">
                <h3 >{category.name}</h3>
                <hr />
                <ul>
                    {
                        category.dishes?.length && 
                        category.dishes.map((dish) => (
                            <ol>
                                <li>
                                    <p class="dish">{dish.name}</p>
                                </li>
                            </ol>
                        ))
                    }
                    {
                    !category.dishes &&
                    category.subCategory?.map((subCat) => (
                    <li>
                                <p class="dish-categories text-start d-flex justify-content-between align-items-center">
                                    {subCat.name}
                                    { subCat.price && <span class="dish-categories me-3">{subCat.price}</span>}
                                </p>
                                {
                                    subCat.dishes &&
                                    subCat.dishes?.map((dish) => (
                                        <ol>
                                            <li>
                                                <p class="dish">{dish.name}</p>
                                            </li>
                                        </ol>
                                    ))
                                }
                            {
                                subCat.subCategory?.map((ssub) => (
                                        <ol>
                                            <p class="dish-categories text-start d-flex justify-content-between align-items-center">
                                            {ssub.name}
                                            { subCat.price && <span class="dish-categories me-3">{subCat.price}</span>}
                                        </p>
                                            {
                                                ssub.dishes?.map((dish) => (
                                                    <li>
                                                        <p class="dish">{dish.name}</p>
                                                    </li>
                                                ))
                                            }
                                        </ol>
                                )) 
                            }
                            </li>
                    ))}
                </ul>
                <br />
                </div>
            ))
            }

            <div class="container">
                <h3 >Rosie O’Grady’s is home</h3>
                
                <ul>
                    <ol>
                        <li>
                            <p class="dish">to two private full-service event <br>
                            spaces for up to 150 guests!
                            </p>
                        </li>
                    </ol>
                    <ol>
                        <li>
                            <p class="dish">Ask your waiter or visit our events <br>
                                website for more details: <br>
                                <a class="dish" href="http://manhattanmanor.com" target="_blank" rel="noopener noreferrer">www.manhattanmanor.com</a>
                            </p>
                        </li>
                    </ol>
                </ul>
                <br />
            </div>
        </div>
    </div>
    <br>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <p class="note-title">Note:</p>
            <p class="note">Prices include 2.8% Credit Card Merchant Fee, price adjusted for Cash and Debit Card payments.</p>
        </div>
      </div>
</div>

<style lang="scss">
  @import "../../assets/styles/_colors.scss";

  body{
    background-color: black;
  }

  .restaurant-menu-group {
    padding: 15px;
    background-color: black;

    .note-title{
        font-size: 12px;
        font-weight: bold;
        color: white;
    }

    .note{
        font-size: 11px;
        color: white;
    }

    .sub-categories{
      font-size: 1.25rem;
      color: white;
      font-weight: bold;
    }

    .btn{
        color: white;
    }

    .dish-categories{
      font-size: 1rem;
      color: $primary;
      font-weight: bold;
    }

    .dish{
      font-size: 1rem;
      color: white;
      font-weight: 300;
    }

    h2 {
      font-size: 2.5rem;
      text-align: center;
    }

    h3 {
      font-size: 1.75rem;
      margin-top: 20px;
    }

    h2,
    h3 {
      color: white;
      font-weight: bold;
    }

    hr {
      margin-left: 0;
      border-color: $primary;
      opacity: 1;

      // If lg screen, max-width is 450
      @media (min-width: 992px) {
        max-width: 700px;
      }
    }

    ul {
      list-style: none;
      margin: 0;
      padding: 0;

      li {
        margin-top: 15px;

        span {
          display: block;
          color: white;

          &:first-child {
            font-size: 18px;
            font-weight: bold;
          }
        }
      }
    }

    ol {
      list-style: none;
      margin: 0;
      padding: 0;

      li {
        margin-top: 15px;

        span {
          display: block;
          color: white;
          font-size: 10px;

          &:first-child {
            font-size: 16px;
            font-weight: bold;
          }
        }
      }
    }
  }
</style>
